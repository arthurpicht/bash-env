alias l='ls -F'
alias ll='ls -lF'
alias lll='ls -alF'
alias la='ls -A'
alias lh='ls -lahF'

alias ..='cd ..'

alias clip='xclip -sel clip'

# "Copy to Clipboard Working Directory" without trailing new line
alias ccwd="pwd | tr -d '\n' | xclip -sel clip"

alias bp='bat --style=plain'

alias gitlog='git log --oneline --all --graph --decorate'

export EDITOR=/usr/bin/joe
